RewriteEngine On
RewriteBase /

# Route Shopify App Proxy requests
RewriteCond %{REQUEST_URI} ^/apps/form-builder/(.*)$
RewriteRule ^apps/form-builder/(.*)$ shopify/app-proxy.php [L,QSA]

# Route easy-form-builder subpath
RewriteCond %{REQUEST_URI} ^/apps/easy-form-builder/(.*)$
RewriteRule ^apps/easy-form-builder/(.*)$ shopify/app-proxy.php?path=$1 [L,QSA]

